extends ../shared/layout
block main-content
    h1 Create a playlist
    form(method="post")
        label(for="title") Title
        input(id="title" class="form-control" type="text" name="title" placeholder="Playlist Title")
        br
        label(for="description") Description
        input(id="description" class="form-control" type="text" name="description" placeholder="Description")
        br
        label(for="category") Category
        select(id="category" class="form-control" type="text" name="category")
            each category in categories
                option(value="#{category}") #{category}
        br
        label(for="isPrivate") Playlist Type
        select(id="isPrivate" class="form-control" type="text" name="isPrivate")
            option(value="false") Public
            option(value="true") Private
        br
        input(type="submit" class="btn btn-lg" value="Create")